<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Require internet and network permissions-->
    <uses-permission android:name="android.permission.INTERNET" /> <!--It enables the app to make network requests, API calls, data fetchinf...-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!--Allows the application to access information about the device's network state, such as whether the device is connected to a network, the type of network (e.g., Wi-Fi, mobile data) || Allows the application to check the device's network connectivity status and type-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- grants the application access to detailed information about the device's Wi-Fi connectivity. It includes details such as whether Wi-Fi is enabled, the current Wi-Fi network's SSID (name), BSSID (MAC address), signal strength, link speed, frequency, and other related information-->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplicationRetrofit"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>